{
  "extends": "./tsconfig.json",
  "include": ["tests/**/*", "server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "types": ["node", "jest", "@types/jest", "@types/supertest"],
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  }
}